<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('./partials/bootstrap') %>
    <title>Login</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <%- include('./partials/tips') %>
    <div class="container col-6">
      <h1 class="text-center">Login !</h1>
      <form method="POST" action="/login">
        <div class="form-group">
          <label for="email" class="fst-italic">Email</label>
          <input type="text" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="password" class="fst-italic">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-success  mt-2">Enter</button>
        <a href="/passwordForgot" class="btn btn-warning  mt-2">Password forgot ?</a>
      </form>
    </div>
</body>

</html>