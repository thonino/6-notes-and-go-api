<!DOCTYPE html>
<html>
  <head>
    <title>Register</title>
    <%- include('./partials/bootstrap') %>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <%- include('./partials/tips') %>
      <div class="container col-6">
        <h1 class="text-center">Sign-up</h1>
        <form method="POST" action="/register">
          <div class="form-group">
            <label for="name" class="fst-italic">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="email" class="fst-italic">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="password" class="fst-italic">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <input type="hidden" class="form-control" id="role" name="role" value="user">
          <button type="submit" class="btn btn-success mt-2">Create</button>
        </form>
      </div>
      <script src="/script.js"></script>
  </body>

</html>